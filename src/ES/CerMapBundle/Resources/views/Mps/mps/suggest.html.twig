<section class="left" style="width: 288px; margin-right: -288px;">
    <article class="lps-tab no-margin">
        <section class="tab-content-listing tab-content-lps" id="tab-mps">
            <h4 class="padding-3">{{ materia.materia|capitalize }}<br><small>{{ materia.descrizione|capitalize }}</small></h4>
            <article class="margin-top-10">
                <h4 class="mps-class padding-3 rounded-3">Categoria</h4>
                <p class="padding-3 margin-bottom-10">{{ materia.categoria.nome }}{% if materia.categoria.categoria %}<br>(<small>{{ materia.categoria.categoria|capitalize }}</small>){% endif %}</p>
            </article>
            <article class="margin-top-10">
                <h4 class="mps-class padding-3 rounded-3">Altre MPS di questa categoria</h4>
                <div class="masonry clearfix margin-top-5">
                {% for mps in categoria.mps %}
                        <a ref="#" onclick="location.href='{{ path('es_mps', {'slug': mps.slug}) }}';" class="box-light rounded-3 gradient-medium left tags"><small>{{ mps.seoTitle|capitalize }}</small></a>
                {% endfor %}
                </div>
            </article>
        </section>
    </article>
</section>
