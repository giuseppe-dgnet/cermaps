<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="es.cermap.sitemap.listener.class">ES\CerMapBundle\EventListener\SitemapListener</parameter>
    </parameters>

    <services>
        <service id="cermap.sitemap.listener" class="%es.cermap.sitemap.listener.class%">
            <tag name="presta.sitemap.listener" />
            <argument type="service" id="router"/>
            <argument type="service" id="doctrine"/>
            <argument type="service" id="kernel"/>
        </service>
    </services>
</container>
